
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function hasAnyRole(roles) {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in roles;
    }
    
    function isManager() {
      return hasAnyRole([
          'Admin', 'Developer', 'Owner', 'Trainer', 'General Manager', 
          'manager', 'Service Manager', 'Parts Manager', 'Finance Manager'
      ]);
    }

    function canViewPerformance(targetUserId) {
        let requester = get(/databases/$(database)/documents/users/$(request.auth.uid));
        let targetUser = get(/databases/$(database)/documents/users/$(targetUserId));
        
        if (!exists(/databases/$(database)/documents/users/$(request.auth.uid)) || !exists(/databases/$(database)/documents/users/$(targetUserId))) {
          return false;
        }

        if (requester.data.role in ['Admin', 'Developer', 'Trainer']) {
            return true;
        }
        if (requester.data.role == 'Owner' && targetUser.data.isPrivateFromOwner != true) {
            return true;
        }
        if (isManager() && targetUser.data.isPrivate != true) {
            return true;
        }
        return false;
    }

    function isUpdatingOwnUserDocument() {
      let isUserIdImmutable = request.resource.data.userId == resource.data.userId;
      let isRoleImmutable = request.resource.data.role == resource.data.role;
      return isUserIdImmutable && isRoleImmutable;
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || hasAnyRole(['Owner', 'Admin', 'Developer', 'Trainer', 'General Manager', 'manager', 'Service Manager', 'Parts Manager']);
      allow list: if isManager();
      allow create: if request.auth.uid == userId;
      allow update: if isOwner(userId) && isUpdatingOwnUserDocument();
      allow delete: if isOwner(userId) || hasAnyRole(['Admin', 'Developer']);
    }

    match /lessons/{lessonId} {
      allow read: if isSignedIn();
      allow create: if isManager();
      allow update, delete: if false;
    }

    match /users/{userId}/lessonLogs/{lessonLogId} {
      allow get, list: if isOwner(userId) || canViewPerformance(userId) || isManager();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId) || isManager();
    }

    match /users/{userId}/earnedBadges/{badgeId} {
      allow get, list: if isOwner(userId) || isManager();
      allow create: if isOwner(userId);
      allow update: if false;
      allow delete: if isManager();
    }

    match /lessonAssignments/{assignmentId} {
      allow read: if isOwner(resource.data.userId) || isManager();
      allow create: if isManager() && request.resource.data.assignerId == request.auth.uid;
      allow update: if isOwner(resource.data.userId) && request.resource.data.completed == true && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['completed']);
      allow delete: if isManager();
    }
    
    match /emailInvitations/{invitationId} {
      // Allow creation by managers, or a known admin email to bypass race conditions on initial setup.
      allow create: if request.auth.token.email in ['andrew@autoknerd.com', 'btedesign@mac.com'] || (isManager() && request.resource.data.inviterId == request.auth.uid);
      // An invited user needs to be able to read their own invitation document to register.
      allow get: if true;
      // Allow the backend to mark the invitation as claimed after user creation.
      allow update: if isSignedIn() && request.resource.data.claimed == true && resource.data.claimed == false;
      allow delete: if false;
    }

    match /dealerships/{dealershipId} {
      allow read: if true;
      // Allow creation by specific roles, or a known admin email for bootstrapping.
      allow create: if request.auth.token.email in ['andrew@autoknerd.com', 'btedesign@mac.com'] || hasAnyRole(['Admin', 'Developer', 'Trainer']);
      allow update, delete: if request.auth.token.email in ['andrew@autoknerd.com', 'btedesign@mac.com'] || hasAnyRole(['Admin', 'Developer']);
    }
  }
}
