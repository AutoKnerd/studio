rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function hasAnyRole(roles) {
      return isSignedIn()
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in roles;
    }

    function isManager() {
      return hasAnyRole([
        'Admin', 'Developer', 'Owner', 'Trainer', 'General Manager',
        'manager', 'Service Manager', 'Parts Manager', 'Finance Manager'
      ]);
    }

    function canViewPerformance(targetUserId) {
      // Firestore rules functions must return a single expression (no statement-style if blocks).
      let requesterPath = /databases/$(database)/documents/users/$(request.auth.uid);
      let targetPath = /databases/$(database)/documents/users/$(targetUserId);

      return isSignedIn()
        && exists(requesterPath)
        && exists(targetPath)
        && (
          // Admin / Developer / Trainer can view everyone
          (get(requesterPath).data.role in ['Admin', 'Developer', 'Trainer'])
          // Owner can view unless the user has opted out from owner visibility
          || (get(requesterPath).data.role == 'Owner' && get(targetPath).data.isPrivateFromOwner != true)
          // Other manager roles can view unless the user is private
          || (isManager() && get(targetPath).data.isPrivate != true)
        );
    }

    function isUpdatingOwnUserDocument() {
      // Prevent a user from changing their own role or userId.
      let isUserIdImmutable = request.resource.data.userId == resource.data.userId;
      let isRoleImmutable = request.resource.data.role == resource.data.role;
      return isUserIdImmutable && isRoleImmutable;
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || hasAnyRole(['Owner', 'Admin', 'Developer', 'Trainer', 'General Manager', 'manager', 'Service Manager', 'Parts Manager']);
      allow list: if isManager();
      allow create: if request.auth.uid == userId
        && request.resource.data.userId == userId
        && request.resource.data.role == 'Sales Consultant'
        && request.resource.data.subscriptionStatus in ['inactive', 'active'];
      allow update: if isOwner(userId) && isUpdatingOwnUserDocument();
      allow delete: if isOwner(userId) || hasAnyRole(['Admin', 'Developer']);
    }

    match /lessons/{lessonId} {
      allow read: if isSignedIn();
      allow create: if isManager();
      allow update, delete: if false;
    }

    match /users/{userId}/lessonLogs/{lessonLogId} {
      allow get, list: if isOwner(userId) || canViewPerformance(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId) || isManager();
    }

    match /users/{userId}/earnedBadges/{badgeId} {
      // Badge “trophy case” visibility:
      // - Users can read their own badges
      // - Admin/Developer/Trainer can read anyone
      // - Owner/Manager roles can read badges for users they are allowed to view via canViewPerformance
      allow get, list: if isOwner(userId) || canViewPerformance(userId);

      // Users can earn/create their own badges (writes from client).
      allow create: if isOwner(userId);

      // Badges are append-only from the client.
      allow update: if false;

      // Only Admin/Developer can delete badges.
      allow delete: if hasAnyRole(['Admin', 'Developer']);
    }

    match /lessonAssignments/{assignmentId} {
      allow read: if isOwner(resource.data.userId) || isManager();
      allow create: if isManager() && request.resource.data.assignerId == request.auth.uid;
      allow update: if isOwner(resource.data.userId)
        && request.resource.data.completed == true
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['completed']);
      allow delete: if isManager();
    }

    match /emailInvitations/{invitationId} {
      // Create and read operations are now handled by secure server endpoints.
      allow create: if isSignedIn()
        && request.resource.data.inviterId == request.auth.uid
        && request.resource.data.token == invitationId;
      allow read, update, delete: if false;
    }

    match /dealerships/{dealershipId} {
      allow read: if true;
      allow create: if false;
      allow update, delete: if hasAnyRole(['Admin', 'Developer']);
    }
  }
}
